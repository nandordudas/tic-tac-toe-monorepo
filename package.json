{
  "name": "tic-tac-toe-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@7.1.7",
  "license": "MIT",
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "dev": "pnpm -r dev",
    "lint:fix": "nr lint --fix",
    "lint": "eslint .",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@types/node": "^17.0.39",
    "eslint": "^8.17.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.0.0",
    "picocolors": "^1.0.0",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "pnpm exec esno scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@antfu"
  }
}
